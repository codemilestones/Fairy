# Backend env template (FastAPI)
#
# Copy to `.env` and fill values. The backend reuses the root `fairy` package which reads these vars.

# Model gateway
MODEL_BASE_URL=
MODEL_API_KEY=

# Tavily search
TAVILY_API_KEY=

# Optional: where to store SQLite (default: apps/backend/var/fairy_demo.sqlite3)
FAIRY_DEMO_DB_PATH=

# Optional: CORS allowlist (comma-separated). Default allows localhost dev.
FAIRY_DEMO_CORS_ORIGINS=

# Optional: log level (DEBUG/INFO/WARNING/ERROR). Default INFO.
FAIRY_DEMO_LOG_LEVEL=INFO

# Optional: also write logs to a local file (default true).
FAIRY_DEMO_LOG_TO_FILE=true
# Optional: log file path (default: apps/backend/var/logs/backend.log)
FAIRY_DEMO_LOG_FILE=
# Optional: rotation settings
FAIRY_DEMO_LOG_MAX_BYTES=10485760
FAIRY_DEMO_LOG_BACKUP_COUNT=5


